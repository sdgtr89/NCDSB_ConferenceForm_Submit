@model NCDSB_ConferenceForm_Submit.Models.ConferenceForm

@{
    ViewBag.Title = "Edit";
}
<head>
    @Styles.Render("~/Content/FormOrganization.css")
    @Styles.Render("~/Content/SubmitEstimate.css")
</head>
<div class="row">
    <h2>Edit</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ConferenceForm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.RowVersion)

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("ConferenceID", null, "Select Conference", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConferenceID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">           
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.BenefitOfAttending, new { placeholder = "Please explain how this would benefit the NCDSB.", htmlAttributes = new { @class = "form-control" } })               
                @Html.ValidationMessageFor(model => model.BenefitOfAttending, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ReqReplacementStaff)
                    @Html.Label("Substitute Staff Required?")
                    @Html.ValidationMessageFor(model => model.ReqReplacementStaff, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-danger glyphicon glyphicon-remove" })
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
